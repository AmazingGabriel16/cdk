{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2016.array.include"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "mocha",
      "node",
      "chai-subset",
      "chai-as-promised",
      "sinon-chai"
    ]
  },
  "include": [
    "src",
    "types",
    "test"
  ]
}
