{
  "name": "miix",
  "version": "0.1.0",
  "description": "Command line tool for developing with Mixer Interactive",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all --parallel --silent test:lint test:unit fmt",
    "test:unit": "mocha --compilers ts:ts-node/register --timeout 20000 -r test/_setup.ts test/*.test.ts",
    "test:lint": "tslint --type-check --project tsconfig.json '{src,test}/**/*.ts'",
    "fmt": "npm-run-all --parallel --silent fmt:ts fmt:js",
    "fmt:js": "prettier --single-quote --trailing-comma es5 --write --print-width 100 \"bin/*\"",
    "fmt:ts": "prettier --single-quote --trailing-comma all --parser typescript --print-width 100 --write \"{src,test}/**/*.ts\"",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mixer/miix.git"
  },
  "keywords": [
    "mixer",
    "interactive",
    "cli"
  ],
  "author": "Connor Peet <connor@xbox.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mixer/miix/issues"
  },
  "homepage": "https://github.com/mixer/miix#readme",
  "devDependencies": {
    "@types/chai": "^4.0.3",
    "@types/chai-as-promised": "0.0.31",
    "@types/chai-subset": "^1.3.0",
    "@types/chalk": "^0.4.31",
    "@types/js-yaml": "^3.9.0",
    "@types/mocha": "^2.2.41",
    "@types/node-fetch": "^1.6.7",
    "@types/sinon": "^2.3.3",
    "@types/sinon-chai": "^2.7.28",
    "@types/yargs": "^8.0.2",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.5.0",
    "mocha": "^3.5.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "sinon": "^3.2.0",
    "sinon-chai": "^2.12.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "js-yaml": "^3.9.1",
    "node-fetch": "^1.7.2",
    "yargs": "^8.0.2"
  }
}
